extends layout

block content
    h1#h1App APLICACIONES

    .container
        div#form
            form(action='/crearapp', method='get')
                input.btn.btn-primary.newApp(value='Nueva Aplicación', type='submit')

            form(action='/escenarios', method='get')
                input.btn.btn-success(value='Continuar', type='submit')


        table#tablaApp.table
            thead
                tr
                    th Nombre
                    th Descripción
                    th Opciones

            tbody
                tr
                    td Orbitel
                    td Venta de minutos para llamadas internacionales.
                    td
                        a(href='/edit') Editar






