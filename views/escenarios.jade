extends layout

block content
    h1#h1App ESCENARIOS

    div#modal.modal.fade(tabindex='-1', role='dialog')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') &times;

                    h4.modal-title ADVERTENCIA

                .modal-body
                    p ¿Está seguro de eliminar este escenario?

                .modal-footer
                    button.btn.btn-default(type='button', data-dismiss='modal') Cerrar

                    button.btn.btn-danger(type='button') Eliminar

    .container
        div#form
            form(action='/crearescenario', method='get')
                input.btn.btn-primary.newApp(value='Nuevo Escenario', type='submit')

        table#tablaApp.table
            thead
                tr
                    th
                    th Nombre
                    th URL
                    th Opciones
            tbody
                tr
                    td
                        button.btn.btn-default(type='submit' formmethod='post' formaction='/play')
                            span.glyphicon.glyphicon-play.text-primary.align-center

                    td Crear Usuario
                    td http://localhost:3000/get/post
                    td
                        a.separador(href='/editarescenario') Editar
                        a#eliminar(data-toggle='modal', data-target='#modal') Eliminar

